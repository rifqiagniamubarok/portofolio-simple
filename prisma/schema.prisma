generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model project {
  id            Int   @id @default(autoincrement())
  name          String
  slug          String
  thumnail      String
  description   String
  tags          String
  views         Int     @default(0)
  likes         Int     @default(0)
  isPublished   Boolean @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt @default(now())
}

model blog {
  id            Int   @id @default(autoincrement())
  name          String
  slug          String
  thumnail      String
  description   String
  tags          String
  views         Int     @default(0)
  likes         Int     @default(0)
  isPublished   Boolean @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt @default(now())
}